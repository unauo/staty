	    <!-- Bootstrap CSS -->
	    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

	    <!-- own styling -->
	    <link rel="stylesheet" href="../styles/base.css">
		<title>Staty by JotForm</title>
	</head>

	<body>

		<% include partials/nav.ejs %>
		
		<div id="form-info" class= "container col-11">
		</div>

		<!-- axios, d3 and own script -->
		<script src= "https://unpkg.com/axios/dist/axios.min.js"></script>
		<script src= "https://d3js.org/d3.v5.min.js"></script>
		<script src= "../scripts/form.js"></script>

		<script>
			const formID = <%= id %>;
			var formInfo = [];
			window.addEventListener("load", function(){
				var apiKey;
				if (window.localStorage.getItem("apiKey")) {
					var apiKey = window.localStorage.getItem("apiKey");
				}
				else {
					JF.login(
				    	function success(){
				    		var apiKey = JF.getAPIKey();
			 	        	window.localStorage.setItem("apiKey", apiKey);
			 			},
				        function error(err){
				        	console.log(err);
							window.alert("oops something went wrong, or not.");
						}
			    	);
				}
				
				if (setForm(formID)) formInfo = setForm(formID);
				else window.alert("oops something went wrong, or not.");

				editHeader();

				getFormQuestions(formID,apiKey);

			});
		</script>
	    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
